#include <stdio.h>
#include <iostream>
#include<algorithm>

using namespace std;


class Solution
{
public:
	  bool isPalindrome(string s)
	  {
		 int len= s.length();
		 if(len<2)
			 return true;
		 int begin=0 ,end =len-1;
		 while(begin<end)
		 {
			  if(s[begin]!=s[end])
				  return false ;
			  begin++;
			  end--;
		 }
		 cout<< "len=" << len << endl;
	     return true;
	  }

};
int main()
{
    Solution ss ;
    string s="i am i" ;
    ss.isPalindrome(s);

    return 0;
}


