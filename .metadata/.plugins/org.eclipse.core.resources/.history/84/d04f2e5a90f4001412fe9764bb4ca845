#include <stdio.h>
#include <iostream>
#include<algorithm>

using namespace std;


class Solution
{
public:
	  bool isPalindrome(string s)
	  {
		 int len= s.length();
		// cout<< "len=" << len << endl;
		 if(len<2)
			 return true;
		 int begin=0 ,end =len-1;
		 while(begin<end)
		 {
			  if(('a'<=s[begin]&&s[begin]<='z')||('A'<=s[begin]&&s[begin]<='Z'))
				  ;
			  else
				  begin ++ ;
			  if('a'<=s[end]<='z'||'A'<=s[end]<='Z')
			  	  ;
			  else
			  	  end --  ;

			  if(s[begin]!=s[end])
				  return false ;
			  begin++;
			  end--;
		 }

	     return true;
	  }

};
int main()
{
    Solution ss ;
    string s="i  ama i" ;
    bool result =false;

    result= ss.isPalindrome(s);
    cout << "result=" << result <<endl;
    return 0;
}


